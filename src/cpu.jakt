    function cli(mut this) {
        .opname = "CLI"
        .interrupt_disable = false
        .pc += 1
        .clock += 2
    }

    function sei(mut this) {
        .opname = "SEI"
        .interrupt_disable = true
        .pc += 1
        .clock += 2
    }

    function clv(mut this) {
        .opname = "CLV"
        .overflow = false
        .pc += 1
        .clock += 2
    }

    function nop(mut this) {
        .opname = "NOP"
        .pc += 1
        .clock += 2
    }
}
