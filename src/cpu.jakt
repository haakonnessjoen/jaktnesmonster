                yield tmp
            }
            0xf1u8 => {
                let tmp = .indirect_zero_page_y(check_extra_clock: true)
                .clock += 5
                .pc += 2
                yield tmp
            }
            0xedu8 => {
                let tmp = .absolute()
                .clock += 4
